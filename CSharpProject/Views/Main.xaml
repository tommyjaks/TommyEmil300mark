<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="CSharpProject.Views.MainWindow"
        Title="MainWindow" Height="auto" Width="auto" Background="#FF8B8282">
    <Canvas Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <Label Content="Klistra in en URL:" Height="33" Canvas.Left="10" Canvas.Top="10" Width="133" FontSize="16" FontFamily="Trebuchet MS"/>
        <TextBox x:Name="tbURL"  Height="32" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="48" Width="317"/>
        <Label Content="Ange namn för flödet:" Height="31" Canvas.Left="10" Canvas.Top="85" Width="207" FontSize="16"/>
        <TextBox x:Name="tbFlow" Height="34" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="134" Width="317"/>
        <ComboBox Height="34" Canvas.Left="377" Canvas.Top="134" Width="138"/>
        <Label Content="Ange intervall för uppdatering: (min)" Height="31" Canvas.Left="377" Canvas.Top="85" Width="273" FontSize="16"/>
        <ListView Height="218" Canvas.Left="10" Canvas.Top="262" Width="317">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Spela upp" Height="107" Canvas.Left="374" Canvas.Top="373" Width="141" FontSize="16"/>
        <Label Content="RSS-flöde" Height="29" Canvas.Left="10" Canvas.Top="228" Width="232" FontSize="16"/>
        <Button x:Name="btnSpara" Content="... spara" Height="40" Canvas.Left="10" Canvas.Top="183" Width="192" FontSize="16" Click="Button_Click"/>
    </Canvas>
</Window>
